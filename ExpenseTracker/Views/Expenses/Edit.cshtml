@model ExpenseTracker.Models.Expense

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Expense</h4>
<hr />
<span class="text-danger">@TempData["ErrorMes"]</span>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ExpensesId" />
            <div class="form-group">
                <label asp-for="ExpensesName" class="control-label"></label>
                <input asp-for="ExpensesName" class="form-control" />
                <span asp-validation-for="ExpensesName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateOfExpense" class="control-label"></label>
                <input asp-for="DateOfExpense" type="date" class="form-control" />
                <span asp-validation-for="DateOfExpense" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ExpenseAmount" class="control-label"></label>
                <input asp-for="ExpenseAmount" class="form-control" />
                <span asp-validation-for="ExpenseAmount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ExpenseCategoryId" class="control-label"></label>
                <select asp-for="ExpenseCategoryId" class="form-control" asp-items="ViewBag.ExpenseCategoryId"></select>
                <span asp-validation-for="ExpenseCategoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
